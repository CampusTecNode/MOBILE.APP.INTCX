<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_card_view_item_adapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/status_spaces"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/notification_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/spacesImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/sports_tennis_24dp"
            android:backgroundTint="@color/primary_color"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/name_spaces"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_spaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Mesa de PingPong 1"
            android:textColor="?android:attr/textColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/description_spaces"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/spacesImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description_spaces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:includeFontPadding="false"
            android:text="Mesa de ping pong cerca de la cafeterÃ­a"
            android:textColor="?attr/textColorDetail"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/name_spaces"
            app:layout_constraintStart_toStartOf="@+id/name_spaces"
            app:layout_constraintTop_toBottomOf="@id/name_spaces" />

        <TextView
            android:id="@+id/cuantity_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Capacidad: "
            android:textColor="?android:attr/textColor"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/description_spaces"
            app:layout_constraintTop_toBottomOf="@+id/description_spaces" />

        <TextView
            android:id="@+id/cuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="6"
            android:textColor="?android:attr/textColor"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/cuantity_lable"
            app:layout_constraintTop_toBottomOf="@+id/description_spaces" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
