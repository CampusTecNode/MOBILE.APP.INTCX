<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_card_view_item_adapter"
    android:padding="8dp">


    <FrameLayout
        android:id="@+id/bag_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/product_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image_holder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ImageStyle_Circle" />

    </FrameLayout>

    <TextView
        android:id="@+id/product_name_text"
        style="@style/Product.Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"

        android:focusableInTouchMode="false"
        android:fontFamily="@font/poppins_regular"
        android:gravity="start"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="@string/product_name"
        android:textColor="?android:attr/textColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/product_description_text"
        app:layout_constraintEnd_toStartOf="@+id/checkbox"
        app:layout_constraintStart_toEndOf="@+id/bag_container"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/checkbox"
        android:layout_width="22sp"
        android:layout_height="22dp"
        android:background="@drawable/delete_forever_24dp_fill"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintBottom_toTopOf="@+id/product_price_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="start"
        android:maxLines="1"
        android:text="Stock: "
        android:textColor="@color/text_description"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/product_price_container"
        app:layout_constraintStart_toEndOf="@+id/bag_container" />

    <TextView
        android:id="@+id/cas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="start"
        android:maxLines="1"
        android:text="Cantidad en stock: "
        android:textColor="@color/text_description"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/bag_container"
        app:layout_constraintTop_toBottomOf="@id/product_description_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_price_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bag_container"
        app:layout_constraintTop_toBottomOf="@id/product_description_text">

        <TextView
            android:id="@+id/symbol_money"
            style="@style/Product.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:text="@string/product_price"
            android:textColor="?android:attr/textColor"
            android:textSize="9sp"
            app:layout_constraintEnd_toStartOf="@+id/product_price_text"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_price_text"
            style="@style/Product.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_horizontal"
            android:text="@string/_100_00"
            android:textColor="?android:attr/textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="start"
        android:maxLines="1"
        android:text="@string/_10"
        android:textColor="?android:attr/textColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cas"
        app:layout_constraintStart_toEndOf="@+id/cas"
        app:layout_constraintTop_toTopOf="@+id/cas" />
</androidx.constraintlayout.widget.ConstraintLayout>